<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textSharing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shareText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Share Text"
        app:layout_constraintEnd_toEndOf="@+id/textSharing"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/textSharing"
        app:layout_constraintTop_toBottomOf="@+id/textSharing" />

    <ImageView
        android:id="@+id/imageSharing"
        android:layout_width="319dp"
        android:layout_height="189dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/shareText"
        app:layout_constraintStart_toStartOf="@+id/shareText"
        app:layout_constraintTop_toBottomOf="@+id/shareText"
        android:src="@drawable/baseline_image"/>

    <Button
        android:id="@+id/shareImg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Share Image"
        app:layout_constraintEnd_toEndOf="@+id/shareText"
        app:layout_constraintStart_toStartOf="@+id/shareText"
        app:layout_constraintTop_toBottomOf="@+id/imageSharing" />

    <Button
        android:id="@+id/sharedAll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Share Image &amp; Text"
        app:layout_constraintEnd_toEndOf="@+id/shareImg"
        app:layout_constraintStart_toStartOf="@+id/shareImg"
        app:layout_constraintTop_toBottomOf="@+id/shareImg" />

</androidx.constraintlayout.widget.ConstraintLayout>